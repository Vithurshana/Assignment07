<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Member"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/idEditCard_No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Card No" />


    <EditText
        android:id="@+id/idMemberName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Member Name" />


    <EditText
        android:id="@+id/idEdtMemberAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Member Address" />

    <EditText
        android:id="@+id/idEdtMemberPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Member Phone Number" />

    <EditText
        android:id="@+id/idEdtUnpaid_dues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Unpaid Dues" />

    <Button
        android:id="@+id/idBtnAddMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Member"
        android:textAllCaps="false"
        android:background="#B2BEB5"/>
    />

</LinearLayout>