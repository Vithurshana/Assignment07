<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update_delete.UpdateDeletePublisherActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Publisher"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/idEditPublisherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Publisher Name" />


    <EditText
        android:id="@+id/idEditPublisherAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Publisher Address" />


    <EditText
        android:id="@+id/idEdtPublisherPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Publisher Phone Number" />

    <Button
        android:id="@+id/btnUpdatePublisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Update Publisher"
        android:textAllCaps="false"
        android:background="#B2BEB5"/>
    />
    <Button
        android:id="@+id/btnDeletePublisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Delete Publisher"
        android:textAllCaps="false"
        android:background="#B2BEB5"/>
    />

</LinearLayout>